@charset "utf-8";
/* CSS Document */

body{
	background: var(--backGroundColor);
}

.Container{
	position: absolute;
	top: 0;
	max-width: 90%;
	height: 99vh;
	text-align: center;
	left: 50%;
	transform: translate(-50%,0);
	display: none;
}

.Container.active{
	display: block;
}

.Container2{
	position: relative;
	width: 90vw;
	padding: 5px;
	border: 1px rgba(9,9,9,1.00) solid;
	border-radius: 15px;
	background: var(--Container2BackGroundColor);
	left: 50%;
	transform: translateX(-50%);
}



.Selections{
	visibility: hidden;
	display: none;
}


.Selections.active{
	visibility: visible;
	display: block;
}

.DescriptionAndMonyDisplay{
	padding-top: 3vw;
	display: flex;
	flex-direction: row;
}

.DescriptionAndMonyDisplay label{
	line-height: 10vw;
	height: 10vw;
	font-weight: bold;
	width: auto;
}

.DescriptionInput{
	border-radius: 10vw;
	flex: 1;
	background: var(--ButtonBackGroundColor);
	height: 10vw;
	font-size: 5vw;
	line-height: 10vw;
	font-weight: bold;
}

.MoneyDisplay{
	left: 0;
	height: 10vw;
	background: var(--ButtonBackGroundColor);
	width: 100%;
	border: 1px #000000 solid;
	border-radius: 10vw;
	font-weight: bolder;
	font-size: 10vw;
	line-height: 10vw;
}

.MoneyDisplay::after{
	content: "$$";
	position: relative;
	margin-left: 1vw;
	float: left;
	font-size: 10vw;
	line-height: 10vw;
	font-weight: bolder;
}

.InputDate{
	position: absolute;
	left: 1vw;
	height: 5vw;
	width: 30vw;
	font-size: 3vw;
}

.ChaJunDate{
	left: 1vw;
	height: 7vw;
	width: 25vw;
	font-size: 3vw;
}

.Container.Home{
	background: var(--Container2BackGroundColor);
}

.MoneySpend{
	border-radius: 10vw;
	background: rgba(255,190,0,1.00);
	border: rgba(255,248,219,1.00) 1vw solid;
}

.MoneySpendDisplay{
	width: 100%;
	height: 100%;
	font-size: 10vw;
	line-height: 10vw;
	font-weight: bold;
}

.ChaJunItemDisplay{
	height: auto;
}

.ChaJunNoClassSelector +section .ChaJunItem{
	position: relative;
	top: 1vh;
	display: none;
	height: 6vw;
	line-height: 6vw;
	font-size: 6vw;
	font-weight: bold;
}

.ChaJunNoClassSelector.active +section .ChaJunItem{
	display: block;
}

.ChaJunItemSection{
	position: relative;
	padding-left: 1vw;
}

.ChaJunItemSection.Date{
	float: left;
	padding-left: 10vw;
}

.ChaJunItemSection.Description{
	position: absolute;
	left: 50%;
	height: 5vw;
	font-size: 5vw;
	font-weight: bold;
	width: 20vw;
	transform: translate(-50%, 0);
	background: var(--Container2BackGroundColor);
	border: none;
}

.ChaJunItemSection.Money{
	float: right;
}

.ChaJunItemSection.Edit{
	float: right;
}

.EditConfirmWindowBackground, .EditWindowBackground{
	background: rgba(0,0,0,0.48);
	position: fixed;
	height: 100%;
	width: 100%;
}

.EditConfirmWindow{
	position: absolute;
	left: 50%;
	top: 40%;
	transform: translate(-50%, -50%);
	width: 80vw;
	height: 45vw;
	background: #FFFFFF;
	z-index: 10;
	border-radius: 10vw;
	border: 1vw solid #AAAAAA;
	word-wrap: break-word;
	text-align: center;
}

.EditConfirmWindow span{
	position: relative;
	top: 10%;
	font-size: 6vw;
	font-weight: bold;
	padding-left: 1vw;
	padding-right: 1vw;
}


.EditWindow{
	position: relative;
	left: 50%;
	top: 40%;
	transform: translate(-50%, -50%);
	width: 80vw;
	height: 100vw;
	background: #FFFFFF;
	z-index: 10;
	border-radius: 10vw;
	border: 1vw solid #AAAAAA;
	word-wrap: break-word;
	text-align: center;
}

.EditWindow span{
	position: relative;
	top: 10%;
	font-size: 6vw;
	font-weight: bold;
	padding-left: 1vw;
	padding-right: 1vw;
}

.EditWindow lable{
	position: relative;
	top: 10%;
	font-size: 6vw;
	font-weight: bold;
	padding-left: 1vw;
	padding-right: 1vw;
	display: flex;
}

.EditWindow .EditWindowMoneyInput, .EditWindow .EditWindowDescriptionInput{
	border-radius: 10vw;
	flex: 1;
	background: var(--ButtonBackGroundColor);
	height: 10vw;
	font-size: 5vw;
	line-height: 10vw;
	font-weight: bold;
}

.SaveSuccessWindow{
	position: absolute;
	left: 50%;
	top: 40%;
	transform: translate(-50%, -50%);
	width: 80vw;
	height: 60vh;
	background: #FFFFFF;
	z-index: 10;
	border-radius: 10vw;
	border: 1vw solid #AAAAAA;
	word-wrap: break-word;
	text-align: center;
	justify-content: center;
	align-items: center;
	
}

.DataDownloadAndInputButtonContainer{
	position: relative;
	top: 10%;
	width: 100%;
	display: flex;
	justify-content: space-around;
}

.BudgetAndRemainedMoney{
	width: 100%;
	display: flex;
	justify-content: space-around;
}

.BudgetAndRemainedMoney > div{
	display: flex;
	flex-direction: column;
	text-align: right;
}

.BudgetAndRemainedMoney > div:nth-child(1){
	
}

.BudgetAndRemainedMoney > div:nth-child(2){
	
}


.Container.CloudStorageContainer{
	width: 90vw;
}

.Container.CloudStorageContainer .Container2{
	height: 80vh;
}

.Container.CloudStorageContainer .Container2 > div{
	position: relative;
	width: 100%;
	text-align: left;
}

.Container.CloudStorageContainer .Container2 > div ul{
	list-style: none;
	padding-left: 0;
	margin: 0;
	display: none;
	visibility: hidden;
}

.Container.CloudStorageContainer .Container2 > div > div.active + ul{
	display: block;
	visibility: visible;
}

.Container.CloudStorageContainer .Container2 > div > div{
	width: 100%;
	height: 100%;
	font-size: 10vw;
	line-height: 10vw;
	font-weight: bold;
}