{
  "env": {
    "browser": true,
    "es2021": true,
    "serviceworker": true,
    "node": true
  },
  "globals": {
    "__APP_VERSION__": "readonly",
    "googletag": "readonly"
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error",
    "no-fallthrough": "error",
    "eqeqeq": ["error", "always"]
  }
}